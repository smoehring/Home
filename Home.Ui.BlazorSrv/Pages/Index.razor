@page "/"

<MudGrid Class="mt-3">
    <MudItem xs="3">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h4">Assets</MudText>
            </MudCardHeader>
            <MudCardContent>
                @if(_values == null)
                {
                    <MudProgressCircular Size="Size.Medium" Indeterminate="true" />
                }
                else
                {
                    <MudText Typo="Typo.h5">@_values[nameof(Asset)]</MudText>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="3">
        <MudPaper>
            <MudCardHeader>
                <MudText Typo="Typo.h4">Media</MudText>
            </MudCardHeader>
            <MudCardContent>
                @if (_values == null)
                {
                    <MudProgressCircular Size="Size.Medium" Indeterminate="true"/>
                }
                else
                {
                    <MudText Typo="Typo.h5">@_values[nameof(Asset)]</MudText>
                }
            </MudCardContent>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper>
            <MudCardHeader>
                <MudText Typo="Typo.h4">Recipes</MudText>
            </MudCardHeader>
            <MudCardContent>
            @if (_values == null)
            {
                <MudProgressCircular Size="Size.Medium" Indeterminate="true"/>
            }
            else
            {
                <MudText Typo="Typo.h5">n/a</MudText>
            }
            </MudCardContent>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper>
            <MudCardHeader>
                <MudText Typo="Typo.h4">Artworks</MudText>
            </MudCardHeader>
            <MudCardContent>
            @if (_values == null)
            {
                <MudProgressCircular Size="Size.Medium" Indeterminate="true"/>
            }
            else
            {
                <MudText Typo="Typo.h5">@_values[nameof(Artwork)]</MudText>
            }
            </MudCardContent>
        </MudPaper>
    </MudItem>
</MudGrid>

