@page "/Asset/Print"

<EditForm Model="_pageModel" OnSubmit="Generate">
    <fieldset disabled="@_isWorking">
        <MudStack>
            <MudPaper Class="pa-3">
                <MudGrid>
                    <MudItem xs="4">
                        <MudStack>
                            <MudText Typo="Typo.h6">Limits</MudText>
                            <MudCheckBox @bind-Checked="_pageModel.PrintOnlyNew" Label="Print only new" Dense="true" />
                            <MudCheckBox @bind-Checked="_pageModel.PrintOnlySelected" disabled="@(_hasSelectedAssets == false)" Label="Print previously selected" Dense="true" />
                        </MudStack>
                    </MudItem>
                    <MudItem xs="4">
                        <MudStack>
                            <MudGrid>
                                <MudItem xs="12">
                                    <MudText Typo="Typo.h6">Sources</MudText>
                                </MudItem>
                                <MudItem xs="1">
                                <MudRadioGroup T="PrintSource" @bind-SelectedOption="_pageModel.PrintSource">
                                    <MudRadio Option="PrintSource.All" Dense="true">All</MudRadio>
                                        <MudRadio Option="PrintSource.Devices" Dense="true">Devices</MudRadio>
                                        <MudRadio Option="PrintSource.Media" Dense="true">Media</MudRadio>
                                </MudRadioGroup>
                                </MudItem>
                            </MudGrid>
                        </MudStack>
                    </MudItem>
                    <MudItem xs="4">
                    <MudStack>
                        <MudText Typo="Typo.h6">Actions</MudText>
                        <MudButton Class="ms-3" Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">Generate</MudButton>
                    </MudStack>
                    </MudItem>
                </MudGrid>
            </MudPaper>
            <MudPaper Class="pa-3">
                <MudTextField T="string" Label="Output" Lines="20" Text="@_output"/>
            </MudPaper>
        </MudStack>
    </fieldset>
</EditForm>
